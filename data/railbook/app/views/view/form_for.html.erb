<h1>View#form_for</h1>
<p>Find me in app/views/view/form_for.html.erb</p>

<%= form_for(@book) do |f| %>
	<div class="field">
		<%= f.label :isbn %><br />
		<%= f.text_field :isbn, size: 25 %>
	</div>
	<div class="field">
		<%= f.label :title %><br />
		<%= f.text_field :title, size: 25 %>
	</div>
	<div class="field">
		<%= f.label :price %><br />
		<%= f.number_field :price, size: 25 %>
	</div>
	<div class="field">
		<%= f.label :publish %><br />
		<%= f.text_field :publish, size: 25 %>
	</div>
	<div class="field">
		<%= f.label :published %><br />
		<%= f.date_select :published, size: 25 %>
	</div>
	<div class="field">
		<%= f.label :cd %><br />
		<%= f.check_box :cd, size: 25 %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

